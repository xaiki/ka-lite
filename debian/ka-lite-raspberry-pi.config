#!/bin/bash
# This is where questions are asked to the user through debconf

set -e

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.
#SCRIPTSCOMMON#

kalite_debconf_set_defaults    
kalite_debconf_size_check

if ! has_state "set_rpi_defaults"
then

    PYTHON_SETUP_PY='from kalite.project.settings.raspberry_pi import *'
    db_set ka-lite/kalite-setup "$PYTHON_SETUP_PY"
    db_fset ka-lite/kalite-setup seen true

fi

add_state "set_rpi_defaults"

kalite_debconf_ask

kalite_debconf_finalize

db_stop

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.
#DEBHELPER#

